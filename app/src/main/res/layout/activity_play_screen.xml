<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:alpha="1"
    android:weightSum="1"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/nameTextView"
            android:textStyle="bold"
            android:textColor="#6d4c41"
            android:textSize="30dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:id="@+id/name"
            android:alpha="0.8"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/nameTextView"
            android:layout_toEndOf="@id/nameTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/nameTextView"
            android:layout_alignTop="@id/nameTextView"
            android:layout_margin="3dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/emailTextView"
            android:textStyle="bold"
            android:textColor="#6d4c41"
            android:textSize="30dp"
            android:typeface="serif"
            android:layout_below="@id/nameTextView"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Opponent"
            android:id="@+id/opponentTextView"
            android:textStyle="bold"
            android:textColor="#6d4c41"
            android:textSize="30dp"
            android:typeface="serif"
            android:layout_below="@id/nameTextView"
            android:layout_margin="10dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:id="@+id/email"
            android:alpha="0.8"
            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/emailTextView"
            android:layout_toEndOf="@id/emailTextView"
            android:layout_alignBottom="@+id/emailTextView"
            android:layout_alignTop="@id/emailTextView"
            android:layout_margin="3dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:paddingLeft="5dp"
            android:id="@+id/opponent"
            android:alpha="0.8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/opponentTextView"
            android:layout_toEndOf="@id/opponentTextView"
            android:layout_alignBottom="@+id/opponentTextView"
            android:layout_alignTop="@id/opponentTextView"
            android:layout_margin="3dp"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Start \nGame"
            android:textColor="#fafafa"
            android:textSize="36dp"
            android:gravity="center"
            android:id="@+id/start"
            android:background="@drawable/round_button"
            android:layout_below="@+id/emailTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:onClick="onStartGameClick"/>

        <TextView
            android:text="Game starts in.."
            android:textSize="34dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/gameStartText"
            android:layout_below="@+id/emailTextView"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>

